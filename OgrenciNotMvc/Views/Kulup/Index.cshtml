@using OgrenciNotMvc.Models.Entity
@model List<TBLKULUPLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KULUP ID</th>
        <th>KULUP AD</th>
        <th>KULUP KONTENJAN</th>
        <th>İŞLEMLER</th>
    </tr>

    <tbody>
        @foreach(var klp in Model)
        {
            <tr>
                <td>@klp.KULUPID</td>
                <td>@klp.KULUPAD</td>
                <td>@klp.KULUPKONTENJAN</td>
                <td> <a href="/Kulup/Sil/@klp.KULUPID" class="btn btn-danger">SİL</a>
                <a href="/Kulup/KulupGetir/@klp.KULUPID" class="btn btn-success" >GÜNCELLE</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Kulup/KulupEkle" class="btn btn-primary">Kulüp Ekle</a>

